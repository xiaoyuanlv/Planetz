<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgProfileImage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/mercury_bg"
        android:rotation="180"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgPlanetProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/mercury"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/lnHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:layout_marginStart="50dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/titlefont"
            android:text="FACT"
            android:textSize="25sp"
            android:textColor="@color/colorPrimary"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fa_list_solid"
           android:fontFamily="@font/fwsome6solid"
            android:textSize="20sp"
            android:layout_marginStart="7dp"
            android:textColor="@color/colorPrimary"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcyFact"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:padding="20dp"
        android:layout_below="@id/imgProfileImage"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_margin="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="50dp"
        app:cardCornerRadius="10dp">

        <TextView
            android:id="@+id/txtPlanetDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:fontFamily="@font/roboto"
            android:lineSpacingExtra="3sp"
            android:text="Mercury is the closest planet to the Sun and is also the smallest of the eight planets in our solar system. "
            />

    </androidx.cardview.widget.CardView>




</RelativeLayout>