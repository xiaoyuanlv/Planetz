<!--            android:layout_height="30dp"-->
<!--           android:layout_gravity="top|start"-->
<!--            android:layout_marginStart="17dp"-->
<!--            android:scaleType="fitCenter"-->
<!--            android:src="@mipmap/sun" />-->


    </androidx.cardview.widget.CardView>


</LinearLayout>